<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.projeto2bruna.model.User" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UsersActivity">

    <TextView
        android:id="@+id/userLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Posts"
        app:layout_constraintEnd_toEndOf="@+id/userLogin"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/userLogin"
        app:layout_constraintTop_toBottomOf="@+id/userLogin" />

    <Button
        android:id="@+id/buttonAlbums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Álbuns"
        app:layout_constraintEnd_toEndOf="@+id/buttonPosts"
        app:layout_constraintStart_toStartOf="@+id/buttonPosts"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosts" />

    <Button
        android:id="@+id/buttonToDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="To do"
        app:layout_constraintEnd_toEndOf="@+id/buttonAlbums"
        app:layout_constraintStart_toStartOf="@+id/buttonAlbums"
        app:layout_constraintTop_toBottomOf="@+id/buttonAlbums" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>