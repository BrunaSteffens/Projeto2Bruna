<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BCBBBB">

    <TextView
        android:id="@+id/commentId"
        android:layout_width="41dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="id"
        app:layout_constraintBottom_toBottomOf="@+id/commentEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/commentEmail"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/commentBody"
        app:layout_constraintStart_toEndOf="@+id/commentId"
        tools:layout_editor_absoluteY="17dp" />

    <EditText
        android:id="@+id/commentBody"
        android:layout_width="362dp"
        android:layout_height="148dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="364dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Comment Title"
        app:layout_constraintBottom_toTopOf="@+id/commentBody"
        app:layout_constraintEnd_toEndOf="@+id/commentEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/commentId"
        app:layout_constraintTop_toBottomOf="@+id/commentEmail"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>